def dockerimage
pipeline {
    
     agent any
    
  tools {php "php:7.4-apache"}
    stages {
        
        stage('Deployer app php'){

          steps {
           echo 'test'
          }
        }
        
        stage('Build') {
          steps {
              
          sh 'php:7.4-apache'
            
          }
        }  
        /* stage('Test') {
          steps {
            sh 'npm test'
          }
        }*/
        stage('Build image with docker') {
             steps{
                script{
                   
                   dockerImage = docker.build("amalguesmi/phpappauth:tagname")
                    
                }
             }
                    
          }
        
     stage('Push image') {
            steps{
                script{
           
         //           withDockerRegistry([credentialsId: "docker-hub", url:""]){
           //         dockerImage.push()
             withCredentials([usernamePassword( credentialsId: 'docker-hub', usernameVariable: 'amalguesmi', passwordVariable: '22651530mama')]) {
        
sh ' docker login -u amalguesmi -p 22651530mama  '
                 // Push your image now
            sh "docker push amalguesmi/phpappauth:tagname"
                
        }
    }
                    
              }
               }          
             
        
        
        
        
        
         
        
    }
}